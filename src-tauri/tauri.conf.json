{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fon",
  "version": "0.0.5-beta.1",
  "identifier": "fun.iice.fon",
  "app": {
    "windows": [],
    "security": {
      "capabilities": [
        "default-capability"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*/**"
        ]
      },
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "build": {
    "beforeBuildCommand": "pnpm run web:generate",
    "frontendDist": "../dist",
    "beforeDevCommand": "pnpm run web:dev",
    "devUrl": "http://localhost:3000/"
  }
}
